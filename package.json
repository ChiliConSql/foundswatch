{
  "name": "foundswatch",
  "version": "6.4.2",
  "description": "FoundSwatch: Themes for Zurb Foundation",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -s build-themes build-site",
    "build-themes": "node ./build/scripts/themes/build_themes.js",
    "build-site": "",
    "build-site:delete-dist": "rimraf dist",
    "build:echo": "node build/scripts/echo.js",
    "build:sass": "node build/scripts/build_sass.js",
    "build:sass2": "node-sass --source-map true src/scss/themes/buzz/foundation.scss -o dist/themes/buzz",
    "build:site-copy-sass-assets": "copyfiles -u 1 \"./dist/themes/**\" dist/site/assets",
    "build:site-copy-foundation-assets": "copyfiles -u 3 \"node_modules/foundation-sites/dist/css/**\" dist/site/assets/vendor/foundation && copyfiles -u 3 \"node_modules/foundation-sites/dist/js/**\" dist/site/assets/vendor/foundation",
    "build:site-html": "copyfiles -u 2 src/html/* dist/site",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "http-server ./dist/site -p 80 -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinmahar/foundswatch.git"
  },
  "keywords": [
    "foundation",
    "zurb",
    "theme",
    "themes",
    "swatch",
    "swatches",
    "bootstrap",
    "bootswatch"
  ],
  "author": "Justin Mahar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justinmahar/foundswatch/issues"
  },
  "homepage": "https://github.com/justinmahar/foundswatch#readme",
  "dependencies": {
    "foundation-sites": "^6.4.4-rc1"
  },
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  }
}