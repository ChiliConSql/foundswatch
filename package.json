{
  "name": "foundswatch",
  "version": "6.4.2",
  "description": "FoundSwatch: Themes for Zurb Foundation",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -s build:delete-dist build-themes build-site",
    "build:delete-dist": "rimraf dist",
    "build-themes": "node ./build/scripts/themes/build_themes.js",
    "build-site": "npm-run-all -s build-site:site-copy-sass-assets build-site:site-copy-foundation-assets build-site:site-html",
    "build-site:site-copy-sass-assets": "copyfiles -u 1 \"./dist/themes/**\" dist/site/assets",
    "build-site:site-copy-foundation-assets": "copyfiles -u 3 \"node_modules/foundation-sites/dist/css/**\" dist/site/vendor/foundation && copyfiles -u 3 \"node_modules/foundation-sites/dist/js/**\" dist/site/vendor/foundation",
    "build-site:site-html": "copyfiles -u 3 \"src/site/html/*\" dist/site",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "http-server ./dist/site -p 80 -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinmahar/foundswatch.git"
  },
  "keywords": [
    "foundation",
    "zurb",
    "theme",
    "themes",
    "swatch",
    "swatches",
    "bootstrap",
    "bootswatch"
  ],
  "author": "Justin Mahar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justinmahar/foundswatch/issues"
  },
  "homepage": "https://github.com/justinmahar/foundswatch#readme",
  "dependencies": {
    "foundation-sites": "^6.4.4-rc1"
  },
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.2"
  }
}
